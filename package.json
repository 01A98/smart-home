{
    "version": "1.0.0",
    "files": [
        "static/*"
    ],
    "main": "static/main.js",
    "types": "static/main.d.ts",
    "scripts": {
        "build": "npm run build:css && npm run build:js",
        "build:css": "tailwindcss -i ./static/styles.css -o ./dist/styles.css --minify",
        "build:js": "mkdir -p dist && find static -type f -name '*.js' -exec cp {} dist \\;",
        "types": "tsc --project ./jsconfig.json"
    },
    "dependencies": {
        "tailwindcss": "^3.3.5"
    },
    "devDependencies": {
        "prettier": "^3.0.3",
        "prettier-plugin-tailwindcss": "^0.5.6",
        "typescript": "^5.2.0",
        "uglify-js": "^3.17.4"
    }
}